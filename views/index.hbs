<html>
<head>
  <meta charset='utf-8' />
  <title>Bwl | Home</title>
  <link rel='icon' type='image/x-icon' href='./assets/img/favicon.png' />
  <link rel='stylesheet'
    href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0' />
</head>
<body>
  <div id='root'></div>
  {{#if this.user }}
    <div class="userId" userId={{user.id}}></div>
    <div class="userAvatar" userAvatar={{user.avatar}}></div>
    <div class="userName" userName={{user.username}} ></div>
    {{else}}
    <div class="userId"></div>
    <div class="userAvatar"></div>
    <div class="userName"></div>
  {{/if}}
  {{#each posts}}
  <div class='app' messageId='{{this.messageId}}' user='{{this.totalComment}}' authorId='{{this.author.id}}'
    authorAvatar='{{this.author.avatar}}' authorName='{{this.author.username}}' totalLike='{{this.totalLike}}'
    createdTimestamp='{{this.createdTimestamp}}'>
    {{#each this.links}}
    <div class='app-link' link='{{this}}'>
    </div>
    {{/each}}
    {{#maxReaction this.reactions}}
    {{#each this}}
    <div class='app-react' reactId='{{this.id}}' reactName='{{this.name}}' count='{{this.count}}'></div>
    {{/each}}
    {{/maxReaction}}
    <div class='app-time' createdTimestampFormat='{{#formatDay this.createdTimestamp}}{{/formatDay}}'>
    </div>
    <div class='app-reactSum' totalReact='{{#feel this}}{{/feel}}'></div>
  </div>
  {{/each}}
  <div class="url" url='{{url}}'></div>
  <script src='https://unpkg.com/react/umd/react.production.min.js'></script>
  <script src='https://unpkg.com/react-dom/umd/react-dom.production.min.js'></script>
  <script src='bundle.js'></script>
</body>
</html>